\ProvidesPackage{RCRDtheme}

% Define custom colors
\definecolor{customblue}{RGB}{59, 130, 246}
\definecolor{customlightblue}{RGB}{191, 219, 254}
\definecolor{customred}{RGB}{220, 38, 38}
\definecolor{customdarkred}{RGB}{185, 28, 28}
\definecolor{customgreen}{RGB}{34, 139, 34}
\definecolor{customlightgray}{RGB}{240, 240, 240}

% Override Beamer colors
\setbeamercolor{title}{fg=customblue}
\setbeamercolor{frametitle}{fg=customdarkred}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{alerted text}{fg=customred}
\setbeamercolor{example text}{fg=customgreen}
\setbeamercolor{item}{fg=customblue}
\setbeamercolor{itemize item}{fg=customblue}
\setbeamercolor{enumerate item}{fg=customblue}
\setbeamercolor{block title}{bg=customblue, fg=white}
\setbeamercolor{block body}{bg=customlightblue, fg=black}
\setbeamercolor{alertblock title}{bg=customred, fg=white}
\setbeamercolor{alertblock body}{bg=white, fg=black}
\setbeamercolor{exampleblock title}{bg=customgreen, fg=white}
\setbeamercolor{exampleblock body}{bg=white, fg=black}
\setbeamercolor{sidebar}{bg=customlightgray, fg=black}
\setbeamercolor{footnote}{fg=customblue}
\setbeamercolor{navigation symbols}{fg=customblue}

% Additional settings for better readability
\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{enumerate items}[default]
\setbeamerfont{frametitle}{size=\large}
\setbeamerfont{item}{size=\normalsize}
